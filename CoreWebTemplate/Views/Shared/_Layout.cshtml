@model CoreWebTemplate.Models.ModelBase
@{
    var actionValue = ViewContext.RouteData.Values.LastOrDefault().Value.ToString().ToLower();



    var bannerText = Model.BanerText;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Planet Wyh - @ViewData["Title"]</title>

    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />
    <link rel="stylesheet" href="~/css/theme.css" type="text/css" />
    <link rel="stylesheet" href="~/css/controls.css" type="text/css" />
</head>
<body>

    <div id="layout-container"> 

        <div class="sticky-container">
            <header>
                <nav id="nav" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
                    <div class="container">

                       
                            <img src="~/images/wyh-logo.png" class="home-img" id="home-img" />
                    

                        @if ( User.Identity.IsAuthenticated )
                        {
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item index">
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>

                                    <li class="spacer">&nbsp;</li>
                                    <li class="nav-item privacy">
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                    </li>

                                    <li class="spacer">&nbsp;</li>
                                    <li class="nav-item privacy">
                                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Sign Out</a>
                                    </li>

                                </ul>
                            </div>
                        }
                    </div>
                </nav>
            </header>

        </div>

        <div class="page-banner">
            <h1>@bannerText</h1>
        </div>

    </div>

    <div class="container content" id="main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - blog - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>

        </footer>*@



    <script src="~/lib/jquery/dist/jquery-3.5.1.min.js"></script>
    <script src="~/lib/jquery/dist/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script type="text/javascript">
        window.actionValue = "@actionValue";
        window.SiteRoot = "@Url.Content("~/")";
    </script>

    @RenderSection( "Scripts", required: false )



</body>
</html>
